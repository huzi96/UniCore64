From: GuanXuetao <gxt@mprc.pku.edu.cn>
Date: Fri, 2 Dec 2011 16:47:20 +0800
Subject: [PATCH 112/641] UniCore64: rearrange Kconfig.debug position

Signed-off-by: GuanXuetao <gxt@mprc.pku.edu.cn>
---
 arch/unicore64/Kconfig       |    8 +-------
 arch/unicore64/Kconfig.debug |    3 ++-
 2 files changed, 3 insertions(+), 8 deletions(-)

diff --git a/arch/unicore64/Kconfig b/arch/unicore64/Kconfig
index 8dc7d8e..eb9cb47 100644
--- a/arch/unicore64/Kconfig
+++ b/arch/unicore64/Kconfig
@@ -85,14 +85,8 @@ source "net/Kconfig"
 
 source "drivers/Kconfig"
 
-source "arch/unicore64/Kconfig.debug"
-
 source "fs/Kconfig"
 
 source "lib/Kconfig"
 
-menu "Kernel hacking"
-
-source "lib/Kconfig.debug"
-
-endmenu
+source "arch/unicore64/Kconfig.debug"
diff --git a/arch/unicore64/Kconfig.debug b/arch/unicore64/Kconfig.debug
index a613b64..cceb7a8 100644
--- a/arch/unicore64/Kconfig.debug
+++ b/arch/unicore64/Kconfig.debug
@@ -1,6 +1,7 @@
 menu "Kernel hacking"
 
-# These options are only for real kernel hackers who want to get their hands dirty.
+source "lib/Kconfig.debug"
+
 config DEBUG_OCD
 	bool "Kernel low-level debugging via On-Chip-Debugger"
 	depends on DEBUG_KERNEL
