From 9144ffc1572193fa54563f6a852004adaea2afb8 Mon Sep 17 00:00:00 2001
From: Guan Xuetao <gxt@mprc.pku.edu.cn>
Date: Thu, 14 Jun 2012 10:07:53 +0800
Subject: [PATCH 384/641] UniCore64: change initial memory size to 64M, to
 make booting quicker

Signed-off-by: Guan Xuetao <gxt@mprc.pku.edu.cn>
---
 arch/unicore64/boot/unicore64-fpga.dts |    6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/arch/unicore64/boot/unicore64-fpga.dts b/arch/unicore64/boot/unicore64-fpga.dts
index f3acc57..d24c364 100644
--- a/arch/unicore64/boot/unicore64-fpga.dts
+++ b/arch/unicore64/boot/unicore64-fpga.dts
@@ -7,11 +7,11 @@
 	/*
 	 * Memory node.
 	 * The device type is memory.
-	 * The base of memory is 0, and the end is 0x20000000.
-	 * So the size of memory is 512M.
+	 * The base of memory is 0, and the end is 0x04000000.
+	 * So the size of memory is 64M.
 	 */
 	memory {
 		device_type = "memory";
-		reg = <0 0x20000000>;
+		reg = <0 0x04000000>;
 	};
 };
