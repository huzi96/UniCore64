From 647cfbc9aee93e270fd20a53de3ae8a98340b2a4 Mon Sep 17 00:00:00 2001
From: Liang Rongrong <liangrongrong@mprc.pku.edu.cn>
Date: Fri, 26 Jul 2013 16:01:43 +0800
Subject: [PATCH 563/641] UniCore64: Add UC64_PMD_SHARE for pmd

Signed-off-by: Liang Rongrong <liangrongrong@mprc.pku.edu.cn>
---
 arch/unicore64/kernel/head.S |    2 ++
 arch/unicore64/mm/mmu.c      |    2 +-
 arch/unicore64/mm/pgtable.c  |    3 ++-
 3 files changed, 5 insertions(+), 2 deletions(-)

diff --git a/arch/unicore64/kernel/head.S b/arch/unicore64/kernel/head.S
index 277ea92..828ee9d 100644
--- a/arch/unicore64/kernel/head.S
+++ b/arch/unicore64/kernel/head.S
@@ -108,6 +108,8 @@ ENTRY(__head_pgtable_init)
 	dmovl		r0, UC64_PM_START
 	dor		r0, r0, #UC64_PMD_SPAGE | UC64_PMD_EXIST
 	dor		r0, r0, #UC64_PMD_TYPE_CACHE | UC64_PMD_RWX
+	dmovl		r2, #UC64_PMD_SHARE
+	dor		r0, r0, r2
 	dmovl		r2, UC64_PMD_SIZE
 
 	.rep		32
diff --git a/arch/unicore64/mm/mmu.c b/arch/unicore64/mm/mmu.c
index 56563cc..997f4b6 100644
--- a/arch/unicore64/mm/mmu.c
+++ b/arch/unicore64/mm/mmu.c
@@ -24,7 +24,7 @@ static void __init uc64_create_direct_mapping(phys_addr_t start,
 
 	/* the first pud has been written in head.S */
 	prot_pmd = __pgprot(UC64_PMD_EXIST | UC64_PMD_SPAGE | UC64_PMD_RWX
-			| prot_extra_flag);
+			| UC64_PMD_SHARE | prot_extra_flag);
 	pmd = (pmd_t *)__va(phys_pud) + pmd_index((unsigned long)__va(start));
 
 	for (phys = start; phys < (start + length); phys += UC64_PMD_SIZE) {
diff --git a/arch/unicore64/mm/pgtable.c b/arch/unicore64/mm/pgtable.c
index e51a4e2..b8ec387 100644
--- a/arch/unicore64/mm/pgtable.c
+++ b/arch/unicore64/mm/pgtable.c
@@ -120,7 +120,8 @@ void pud_populate(struct mm_struct *mm, pud_t *pudp, pmd_t *pmd)
  */
 void pmd_populate(struct mm_struct *mm, pmd_t *pmd, pgtable_t page)
 {
-	set_pmd(pmd, __pmd(page_to_phys(page) | UC64_PMD_EXIST));
+	set_pmd(pmd, __pmd(page_to_phys(page) | UC64_PMD_EXIST
+		| UC64_PMD_SHARE));
 }
 
